---

<DashboardLayout titulo="Noticias Mérida">
  <div class="space-y-8">
    <!-- Banner Premium -->
    <PremiumBanner />

    <!-- Categorías Seleccionables -->
    <CategoryFilter />

    <!-- Sección de Noticias Destacadas -->
    <section class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-bold text-gray-900">Noticias Destacadas de Mérida</h2>
          <a href="/noticias/destacadas" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
            Ver todas
          </a>
        </div>
      </div>
      
      <!-- Carrusel de noticias destacadas -->
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Noticia destacada principal -->
          <div class="md:col-span-2 group">
            <div class="relative overflow-hidden rounded-xl aspect-video">
              <img 
                src={featuredNews[0].image || "/placeholder.svg"}
                alt={featuredNews[0].title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 p-6">
                <span class="inline-block px-3 py-1 bg-red-600 text-white text-xs font-semibold rounded-full mb-2">
                  {featuredNews[0].category}
                </span>
                <h3 class="text-xl md:text-2xl font-bold text-white mb-2">
                  {featuredNews[0].title}
                </h3>
                <p class="text-gray-200 text-sm mb-2">
                  {featuredNews[0].excerpt}
                </p>
                <div class="flex items-center text-gray-300 text-xs">
                  <span>Por {featuredNews[0].author}</span>
                  <span class="mx-2">•</span>
                  <span>{featuredNews[0].time}</span>
                  {featuredNews[0].isPremium && (
                    <span class="ml-2 px-2 py-0.5 bg-yellow-500 text-white rounded text-xs">PREMIUM</span>
                  )}
                </div>
              </div>
            </div>
          </div>
          
          <!-- Noticias destacadas secundarias -->
          <div class="space-y-4">
            {featuredNews.slice(1, 3).map(news => (
              <div class="group">
                <div class="relative overflow-hidden rounded-xl aspect-video">
                  <img 
                    src={news.image || "/placeholder.svg"}
                    alt={news.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
                  <div class="absolute bottom-0 left-0 p-4">
                    <span class={`inline-block px-2 py-1 ${
                      news.categoryColor === 'blue' ? 'bg-blue-600' : 
                      news.categoryColor === 'green' ? 'bg-green-600' : 
                      'bg-yellow-600'
                    } text-white text-xs font-semibold rounded-full mb-1`}>
                      {news.category}
                    </span>
                    <h3 class="text-sm md:text-base font-bold text-white">
                      {news.title}
                    </h3>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Estadísticas Generales -->
    <section>
      <h2 class="text-xl font-bold text-gray-800 mb-4">Estadísticas Generales</h2>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {stats.map(stat => (
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-[1.02]">
            <div class="p-6">
              <div class="flex items-center">
                <div class={`flex-shrink-0 p-3 bg-${stat.color}-100 rounded-full`}>
                  <svg class={`h-8 w-8 text-${stat.color}-600`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.icon}></path>
                  </svg>
                </div>
                <div class="ml-5">
                  <h3 class="text-lg font-semibold text-gray-900">{stat.title}</h3>
                  <div class="mt-1">
                    <p class={`text-2xl font-bold text-${stat.color}-600`}>{stat.value}</p>
                    <p class="text-sm text-gray-500">{stat.description}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Secciones de Noticias -->
    <section class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Últimas Noticias -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
              <h2 class="text-xl font-bold text-gray-900">Últimas Noticias de Mérida</h2>
              <button class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors duration-300">
                Nueva Noticia
              </button>
            </div>
          </div>
          <div class="divide-y divide-gray-200">
            {latestNews.map(news => (
              <NewsCard 
                title={news.title}
                excerpt={news.excerpt}
                category={news.category}
                categoryColor={news.categoryColor}
                image={news.image}
                author={news.author}
                time={news.time}
                isPremium={news.isPremium}
              />
            ))}
          </div>
          <div class="p-4 border-t border-gray-200 text-center">
            <a href="/noticias" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
              Ver todas las noticias
            </a>
          </div>
        </div>
      </div>

      <!-- Panel Lateral -->
      <div class="space-y-6">
        <!-- Sección Premium -->
        <PremiumContent />

        <!-- Categorías Populares -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-900">Categorías Populares</h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              {popularCategories.map(category => (
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div class={`w-3 h-3 bg-${category.color}-500 rounded-full mr-3`}></div>
                    <span class="text-gray-600">{category.name}</span>
                  </div>
                  <span class={`px-3 py-1 bg-${category.color}-100 text-${category.color}-800 rounded-full text-sm`}>
                    {category.count} artículos
                  </span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Autores Destacados -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
          <div class="p-6 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-900">Autores Destacados</h2>
          </div>
          <div class="p-6">
            <div class="space-y-4">
              {featuredAuthors.map(author => (
                <div class="flex items-center">
                  <img class="h-10 w-10 rounded-full object-cover mr-3" src={author.image || "/placeholder.svg"} alt={author.name} />
                  <div>
                    <p class="text-sm font-medium text-gray-900">{author.name}</p>
                    <p class="text-xs text-gray-500">{author.articles} artículos este mes</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</DashboardLayout>

<script>
  // Verificar autenticación
  const token = localStorage.getItem('token');
  if (!token) {
    window.location.href = '/login';
  }
</script>
