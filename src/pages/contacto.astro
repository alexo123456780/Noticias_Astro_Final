---
import DashboardLayout from '../layouts/DashboardLayout.astro';
---

<DashboardLayout titulo="Contacto">
  <div class="max-w-4xl mx-auto py-8 px-4">
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden transform transition-all duration-300 hover:shadow-xl">
      <!-- Encabezado -->
      <div class="bg-gradient-to-r from-red-600 to-red-800 px-8 py-6 text-center">
        <h1 class="text-3xl font-bold text-white mb-2">Contáctanos</h1>
        <p class="text-red-100">Estamos aquí para responder tus preguntas y escuchar tus comentarios</p>
      </div>

      <!-- Formulario de contacto -->
      <div class="p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          <!-- Formulario -->
          <section>
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Envíanos un mensaje</h2>
            <form class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-600">Nombre</label>
                <input 
                  type="text" 
                  placeholder="Tu nombre"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 transition-colors duration-300"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-600">Email</label>
                <input 
                  type="email" 
                  placeholder="tu@email.com"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 transition-colors duration-300"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-600">Asunto</label>
                <input 
                  type="text" 
                  placeholder="Asunto de tu mensaje"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 transition-colors duration-300"
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-600">Mensaje</label>
                <textarea 
                  rows="4" 
                  placeholder="Escribe tu mensaje aquí..."
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-red-500 focus:border-red-500 transition-colors duration-300"
                ></textarea>
              </div>
              <button 
                type="submit" 
                class="w-full px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors duration-300 transform hover:scale-[1.02]"
              >
                Enviar Mensaje
              </button>
            </form>
          </section>

          <!-- Información de contacto -->
          <section class="flex flex-col justify-between">
            <div>
              <h2 class="text-xl font-semibold text-gray-900 mb-4">Información de Contacto</h2>
              <div class="space-y-4">
                <div class="flex items-start">
                  <svg class="h-6 w-6 text-red-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Dirección</h3>
                    <p class="text-gray-600">Calle 60 x 45, Centro<br>Mérida, Yucatán, México</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <svg class="h-6 w-6 text-red-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Teléfono</h3>
                    <p class="text-gray-600">+52 999 123 4567</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <svg class="h-6 w-6 text-red-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <div>
                    <h3 class="font-medium text-gray-900">Email</h3>
                    <p class="text-gray-600">contacto@noticiasmerida.com</p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Redes sociales -->
            <div class="mt-8">
              <h3 class="font-medium text-gray-900 mb-3">Síguenos en redes sociales</h3>
